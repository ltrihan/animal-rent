<div class="bg-img">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= cl_image_tag( @animal.photo, :size => '350x250') %>
      <h1><%= @animal.name %></h1>
      <p><%= @animal.description %></p>
      <div class="d-flex justify-content-between">
      <%= link_to "Book this animal", new_animal_booking_path(@animal), class: 'btn btn-success', method: :get %>
      <%= link_to "Delete this animal", animal_path(@animal), class: 'btn btn-danger', method: :delete %>
      </div>
      <br>
      <div class="link_show">
      <%= link_to "Back to all animals", animals_path %>
      </div>
    </div>
  </div>
</div>
