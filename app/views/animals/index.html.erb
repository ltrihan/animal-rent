<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All Animals</h1>
      <%= link_to "Add a animal", new_animal_path, class: "btn btn-primary btn-lg" %>
      <ul class="list-group">
        <% @animals.each do |animal| %>
          <li class="list-group-item">
            <h2><%= animal.name %></h2>
            <%= link_to animal.name, animal_path(animal) %>
            <%= link_to animal_path(animal), method: :delete, data: { confirm: "Are you sure?" } do %>
            <div class="text-right">
                  <i class="fa fa-trash destroy_animal"></i>
                  </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
