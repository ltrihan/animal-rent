<div class="content" style="display: flex;">
  <div class="cards" style="align-items: flex-start;">
    <% @animals.each do |animal| %>
      <div class="col-lg-3">
        <div class="card-trip">
          <%= cl_image_tag animal.photo %>
          <div class="card-trip-infos">
            <div>
              <%= link_to animal_path(animal) do %>
                <h2><%= animal.name %></h2>
              <% end %>
              <p><%= animal.description %></p>
            </div>
            <h2 class="card-trip-pricing">07â‚¬/h</h2>
            <div class="card-trip-user">
            <%= cl_image_tag(animal.user.photo, :size => '45X45', class: "avatar-bordered") %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
