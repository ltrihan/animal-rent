<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Create a new animal</h1>

      <%= simple_form_for @animal do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :species %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
