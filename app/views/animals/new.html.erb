<div class="container">
  <div class="row justify-content-center">
    <div class="form-login col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="text-center">Put your animal in rent</h2>

      <%= simple_form_for @animal do |f| %>
        <%= f.input :name, placeholder: "Your pets' name here" %>
        <%= f.input :description, placeholder: 'Tell us more about it' %>
        <%= f.input :species, collection: ["Dog", "Cat", "Tortle", "Rabbit", "Dragons", "Others"], prompt: 'Spider' %>
        <label class='download-label'>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <div class='center-button'>
            <div class="btn btn-light">
              Download a picture
            </div>
          </div>
        </label>
        <%= f.button :submit, class: 'btn btn-primary justify-content-center' %>
      <% end %>
    </div>
  </div>
</div>
