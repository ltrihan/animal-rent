<div class="container">

  <!-- Heading Row -->
  <br>
  <h1 class="text-center">Welcome on your profile <%= @user.name %> ðŸ˜Ž </h1>
  <div class="row align-items-center my-4">
    <div class="col-lg-5">
      <%= cl_image_tag(@user.photo, :size => '250x250') %>
    </div>
    <!-- /.col-lg-8 -->
    <div class="col-sm-5">
      <h1 class="font-weight-light">Your description :</h1>
      <h4> <%= @user.description %> </h4>
    </div>
    <!-- /.col-md-4 -->
  </div>
  <!-- /.row -->
  <div class="card text-white bg-secondary my-5 py-4 text-center">
    <div class="card-body">
      <h3 class="text-white m-0">Your ongoing bookings : </h3>
    </div>
  </div>

  <div class="text-center">
    <% if @user.bookings.empty? %>
      <p class="text-center">You haven't any booking for the moment.</p>
    <% else %>
      <ul>
        <% @user.bookings.each do |booking| %>
        <li><%= booking.start_at %> - <%= booking.end_at %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <!-- Call to Action Well -->
  <div class="card text-white bg-secondary my-5 py-4 text-center">
    <div class="card-body">
      <h3 class="text-white m-0">Your animals on rent : </h3>
    </div>
  </div>


  <% if @user.animals.empty? %>
    <p class="text-center">You haven't put any animal on rent.</p>
  <% else %>
    <div class="row">
      <% @user.animals.each do |animal| %>
        <div class="col-md-4 mb-5">
          <div class="card h-100">
            <div class="card-body">
              <h1 class="card-title"><%= animal.name %></h1>
              <p class="card-text"><%= animal.description %></p>
              <%= cl_image_tag( animal.photo, :size => '300x200') %>
            </div>
            <div class="card-footer">
              <%= link_to "More details", animal_path(animal), class: 'btn btn-outline-secondary', method: :get %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

    <!-- /.row -->
  <%= link_to "List of all animals", animals_path(@animal), class: 'btn btn-outline-danger', method: :get %>

</div>
